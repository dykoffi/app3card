<div id="modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="my-modal-title" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title lead" id="my-modal-title">Enregistrer un nouvel électeur</h5>
                <button class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body p-5">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text white border-right-0" id="my-addon">nom : </span>
                    </div>
                    <input class="form-control-plaintext border border-left-0 p-2" type="text" id="nom">

                </div>
                <div class="input-group mt-2">
                    <div class="input-group-prepend">
                        <span class="input-group-text white border-right-0" id="my-addon">prenoms : </span>
                    </div>
                    <input class="form-control-plaintext border border-left-0 p-2" type="text" id="prenoms">

                </div>
                <div class="input-group mt-2">
                    <div class="input-group-prepend">
                        <span class="input-group-text white border-right-0" id="my-addon">sexe : </span>
                    </div>
                    <select class="form-control-plaintext border border-left-0" id="sexe">
                        <option value="F" selected>Feminin</option>
                        <option value="M">Masculin</option>
                    </select>
                </div>
                <div class="input-group mt-2">
                    <div class="input-group-prepend">
                        <span class="input-group-text white border-right-0" id="my-addon">date de naissance :
                        </span>
                    </div>
                    <input class="form-control-plaintext border border-left-0 p-2" type="date" id="datenaissance">

                </div>
                <div class="input-group mt-2">
                    <div class="input-group-prepend">
                        <span class="input-group-text white border-right-0" id="my-addon">lieu de naissance :
                        </span>
                    </div>
                    <input class="form-control-plaintext border border-left-0 p-2" type="text" id="lieunaissance">

                </div>
                <div class="input-group mt-2">
                    <div class="input-group-prepend">
                        <span class="input-group-text white border-right-0" id="my-addon">domicile : </span>
                    </div>
                    <input class="form-control-plaintext border border-left-0 p-2" type="text" id="domicile">

                </div>

                <div class="input-group mt-2">
                    <div class="input-group-prepend">
                        <span class="input-group-text white border-right-0" id="my-addon">Profession :
                        </span>
                    </div>
                    <input class="form-control-plaintext border border-left-0 p-2" type="text" id="profession">

                </div>
                <div class="input-group mt-2">
                    <div class="input-group-prepend">
                        <span class="input-group-text white border-right-0" id="my-addon">contact : </span>
                    </div>
                    <input class="form-control-plaintext border border-left-0 p-2" type="tel" id="contact">
                    <input type="hidden" id="carte">

                </div>
                <form action="regist/add" enctype="multipart/form-data" method="post" id="form">
                    <div class="input-group mt-2">
                        <label for="file">Ajouter une photo</label>
                        <input class="dropify" id="photo" type="file" name="upload" multiple capture>
                    </div>
                </form>
            </div>
            <div class="modal-footer border-0">
                <button class="btn btn-success" type="button" id="sendData">valider <i
                        class=" fa ml-2 fa-chevron-right"></i></button>
            </div>
        </div>
    </div>
</div>

